Print the following pattern for the given N number of rows.
Pattern for N = 3
 A
 BB
 CCC
 
 
 #include<iostream>
using namespace std;


int main(){
    
  int n;
  cin>>n;
  for(int i =1;i<=n;i++){
      for(int j =1;j<=i;j++){
           char k ='A'+i-1;
           cout<<k;
      }
      cout<<endl;
  }
    
}

                                                                       OR
                                                                       
                                                                       
#include <iostream>
using namespace std;
int main(){
    int n;
    cin>>n;
    int i =1;
    //char k='A'+i-1;
    //int k=1;
    while(i<=n){
         int j=1;
         //int k=i;
         char k = 'A'+i-1;
    while(j<=i){
        cout<<k;
        //k++;
        j++;
    }


        i++;
        cout<<endl;
}
}

